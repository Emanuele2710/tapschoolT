<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.consumer.gestioneorari.ttapschool.ProfRegisterActivity"
    android:background="@drawable/sfondo_activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="-60dp"
        android:gravity="center_horizontal">>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="246dp"
            android:layout_height="209dp"
            android:layout_marginBottom="-30dp"
            android:layout_marginEnd="56dp"
            android:layout_marginStart="56dp"
            android:layout_marginTop="31dp"
            android:layout_x="10dp"
            android:layout_y="-47dp"
            app:layout_constraintBottom_toTopOf="@+id/etNome"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/logo_white"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_x="98dp"
            android:layout_y="99dp"
            android:text="Registrazione Professore"
            android:textColor="@android:color/background_light"
            app:layout_constraintLeft_toLeftOf="@+id/imageView6"
            app:layout_constraintRight_toRightOf="@+id/imageView6"
            app:layout_constraintTop_toBottomOf="@+id/imageView6"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1" />

        <EditText
            android:id="@+id/etNome"
            style="@android:style/Widget.EditText"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_alignStart="@+id/btnAggiungiMateria"
            android:layout_marginEnd="0dp"
            android:layout_x="70dp"
            android:layout_y="133dp"
            android:backgroundTint="@android:color/background_light"
            android:ems="10"
            android:hint="Nome"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/etCognome"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:textColorHint="@android:color/background_light" />

        <EditText
            android:id="@+id/etCognome"
            style="@android:style/Widget.EditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="71dp"
            android:layout_y="175dp"
            android:backgroundTint="@android:color/background_light"
            android:ems="10"
            android:hint="Cognome"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/etUsername"
            app:layout_constraintLeft_toLeftOf="@+id/etNome"
            app:layout_constraintRight_toRightOf="@+id/etNome"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:textColorHint="@android:color/background_light" />

        <EditText
            android:id="@+id/etUsername"
            style="@android:style/Widget.EditText"
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:layout_x="72dp"
            android:layout_y="221dp"
            android:backgroundTint="@android:color/background_light"
            android:ems="10"
            android:hint="Username"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="@android:color/background_light"
            app:layout_constraintBottom_toTopOf="@+id/etRipetiPassword"
            app:layout_constraintLeft_toLeftOf="@+id/etCognome"
            app:layout_constraintRight_toRightOf="@+id/etCognome"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:textColorHint="@android:color/background_light" />

        <EditText
            android:id="@+id/etRipetiPassword"
            style="@android:style/Widget.EditText"
            android:layout_width="wrap_content"
            android:layout_height="41dp"

            android:layout_x="75dp"
            android:layout_y="310dp"
            android:backgroundTint="@android:color/background_light"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"

            android:textColorLink="@android:color/background_light"
            app:layout_constraintLeft_toLeftOf="@+id/etUsername"
            app:layout_constraintRight_toRightOf="@+id/etUsername"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:textColorHint="@android:color/background_light" />

        <EditText
            android:id="@+id/etRipetiPassword"
            style="@android:style/Widget.EditText"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_marginBottom="10dp"
            android:layout_x="73dp"
            android:layout_y="264dp"
            android:backgroundTint="@android:color/background_light"
            android:ems="10"
            android:hint="Ripeti Password"
            android:inputType="textPersonName"
            android:textColor="@android:color/background_light"
            android:textColorHighlight="@android:color/background_light"
            android:textColorHint="@android:color/background_light"
            android:textColorLink="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/etUsername"
            app:layout_constraintRight_toRightOf="@+id/etUsername"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:textColorHint="@android:color/background_light" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="MATERIE"
            android:textAlignment="center"
            android:textColor="@color/bianco" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lyMaterie"
            android:orientation="vertical"
            android:layout_marginBottom="15dp">

            <Spinner
                android:id="@+id/spMateria"
                android:layout_width="209dp"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
        <Button
            android:id="@+id/btnAggiungiMateria"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_x="109dp"
            android:layout_y="452dp"
            android:background="@android:color/holo_green_dark"
            android:text="AGGIUNGI"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="208dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="CLASSI"
            android:textAlignment="center"
            android:textColor="@color/bianco" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/llClasse"
            android:layout_marginBottom="15dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spClasse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />

                <Spinner
                    android:id="@+id/spSezione"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:id="@+id/spIndirizzo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


        </LinearLayout>

        <Button
            android:id="@+id/btnAggiungiClasse"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_x="109dp"
            android:layout_y="452dp"
            android:background="@android:color/holo_green_dark"
            android:text="AGGIUNGI"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

        <Button
            android:id="@+id/btnRegistra"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:layout_marginEnd="60dp"
            android:layout_marginStart="60dp"
            android:layout_x="109dp"
            android:layout_y="452dp"
            android:background="@android:color/holo_green_dark"
            android:text="REGISTRATI"
            android:textColor="@android:color/background_light"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1" />

    </LinearLayout>
</ScrollView>
