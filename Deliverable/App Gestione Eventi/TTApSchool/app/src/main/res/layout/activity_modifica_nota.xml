<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.consumer.gestioneorari.ttapschool.ModificaNotaActivity"
    android:background="@drawable/sfondo_activity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_x="2dp"
        android:layout_y="169dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="248dp"
            android:layout_height="170dp"
            app:srcCompat="@drawable/logo_white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_x="181dp"
            android:text="DATA"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spData"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_x="0dp"
            android:layout_y="222dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_x="181dp"
            android:text="NUOVA DATA"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etNewData"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorAccent"
            android:textIsSelectable="true" />

    </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_x="181dp"
            android:text="ORA"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/spOra"
            android:layout_width="209dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:layout_x="0dp"
            android:layout_y="222dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginBottom="40dp">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_x="181dp"
            android:text="NUOVA ORA"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etNewOra"
            android:layout_width="205dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:ems="10"
            android:inputType="none"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorAccent"
            android:textIsSelectable="true" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_x="181dp"
            android:text="NOTA"
            android:textColor="@android:color/white"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etNewNota"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:cursorVisible="true"
            android:inputType="textMultiLine"
            android:ems="10"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textColorLink="@color/colorAccent"
            />

        <Button
            android:id="@+id/btnModificaNota"
            android:layout_width="222dp"
            android:layout_height="48dp"
            android:layout_marginBottom="40dp"
            android:layout_x="96dp"
            android:layout_y="563dp"
            android:background="@android:color/holo_green_dark"
            android:text="MODIFICA"
            android:textColor="@android:color/background_light" />

    </LinearLayout>


</ScrollView>
