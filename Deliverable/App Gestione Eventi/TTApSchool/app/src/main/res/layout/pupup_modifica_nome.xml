<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_x="0dp"
        android:layout_y="226dp"
        android:gravity="center"
        android:orientation="vertical">

        <AbsoluteLayout
            android:layout_width="320dp"
            android:layout_height="match_parent"

            android:background="@drawable/popup"
            android:gravity="center"
            android:orientation="vertical">


            <Button
                android:id="@+id/btnConferma"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="210dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/white"
                android:layout_y="166dp"
                android:text="CONFERMA" />

            <Button
                android:id="@+id/btnChiudi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_x="10dp"
                android:layout_y="166dp"
                android:background="@android:color/transparent"
                android:textColor="@android:color/white"
                android:text="ANNULLA" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_x="0dp"
                android:layout_y="31dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvNomePopup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ib_close"
                    android:text="NOME"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_x="2dp"
                android:layout_y="103dp"
                android:gravity="center">

                <EditText
                    android:id="@+id/etNewName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Nuovo Nome"
                    android:inputType="textPersonName"
                    android:cursorVisible="false"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textColorHint="@android:color/white" />

            </LinearLayout>


        </AbsoluteLayout>


    </LinearLayout>


</RelativeLayout>